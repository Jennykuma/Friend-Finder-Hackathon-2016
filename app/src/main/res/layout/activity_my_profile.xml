<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pls"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jennykuma.friendfinder.MyProfile">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dName"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dEmail"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dGamePlat"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dGamingExp"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dPrefGamingStyle"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@+id/textview5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dGame"
        android:fontFamily="sans-serif-light"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView3"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_alignTop="@+id/dEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#9E9E9E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="In-Game Name"
        android:id="@+id/textView2"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/dName"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#9E9E9E"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Preferred Gaming Platform"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/dGamePlat"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#9E9E9E"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Skill Level"
        android:id="@+id/textview5"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/dGamingExp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#9E9E9E"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Preferred Gaming Style"
        android:id="@+id/textView6"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/dPrefGamingStyle"
        android:layout_alignLeft="@+id/textview5"
        android:layout_alignStart="@+id/textview5"
        android:textColor="#9E9E9E"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chosen Game"
        android:id="@+id/textView5"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/dGame"
        android:layout_alignLeft="@+id/textview5"
        android:layout_alignStart="@+id/textview5"
        android:textColor="#9E9E9E"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/button"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#70FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gaming Information:"
        android:fontFamily="sans-serif-light"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
